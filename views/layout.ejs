                      <li><a href="" class="nav-link px-2 text-white">Solutions</a></li>
                    </ul>
                    <div class="text-end">
                      <% if (!currentUser) { %>
                        <a href="/auth/signup" class="btn btn-outline-light me-2">Signup</a>
                        <a href="/auth/login" class="btn btn-outline-light me-2">Login</a>
                      <% } else { %>
                        <a href="/auth/logout" class="btn btn-outline-light me-2">Logout</a>
                        <a href="/projects" class="btn btn-outline-light me-2">Profile</a>
                      <% } %>
