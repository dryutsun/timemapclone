<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<link rel="stylesheet" href="/static/css/project-grid.css">

<div class="text-center container-sm">
    <h1 class="display-2 profile-header"><%= currentUser.name %>'s Profile</h2>
    <h2 class="display-4"> Projects </h1>
    <a class="btn btn-outline-light me-2 new-project"  href="/projects/new" role="button">Add A New Project</a>
    <div class="project-grid">

    <% project.forEach((project)=>{%>
        <div class="card project-card" style="outline: red dotted 1px;">
            <div class="card-actions">
                <div class="edit-container">
                    <a class="btn btn-success button-left"  href="/projects/edit/<%= project.id %>" role="button" aria-label="edit">✎</a>
                </div>
                <form action="/projects/<%= project.id %>/?_method=DELETE" method="POST">
                    <div class="delete-container">
                        <input class="btn btn-danger" style="color:white;" type="submit" value="✕"aria-label="delete">
                    </div>
                </form>
            </div>
            <a href="/projects/<%= project.id %>"><h3> <%= project.title %></h3></a>
            <h5> <%= project.description %></h5>
        </div>
    <%})%>

    </div>





</div>

