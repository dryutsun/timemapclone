<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<link rel="stylesheet" href="/static/css/edit.css">

<div class="container d-flex event-wrapper">

  <form action="/events/edit/<%=event.id%>?_method=PUT" method="POST">
      <div class="field-item form-control-lg">  
        <label for="title">Title</label>
        <br>
        <input type="text" id="title" name="title" value="<%= event.title %>">
      </div>

      <div class="field-item form-control-lg">  
          <label for="date">Date </label>
          <br>
          <div id="datehelp" class="form-text small">Please enter your date in MM/DD/YYYY format.</div>
          <input type="date" id="date" name="date" value="<%= event.date %>">
        </div>

        <div class="field-item form-control-lg">  
          <label for="timeStart">Time Start</label>
          <br>
          <input type="time" id="timeStart" name="timeStart" value="<%= event.timeStart %>">
        </div>

        <div class="field-item form-control-lg">  
          <label for="locationLon">Location Longitude</label>
          <br>
          <input type="text" id="locationLon" name="locationLon" value="<%= event.locationLon %>">
        </div>

        <div class="field-item form-control-lg">  
          <label for="locationLat">Location Latitude</label>
          <br>
          <input type="text" id="locationLat" name="locationLat" value="<%= event.locationLat %>">
        </div>

        <div class="field-item form-control-lg">  
          <label for="association">Association:</label>
          <br>
          <div id="associationhelp" class="form-text small">Please enter your date in YYYY-MM-DD format.</div>
          <input type="text" id="association" name="association" value="<%= event.association %>">
        </div>

        <div class="field-item form-control-lg">  
          <label for="sourcedata">Source Data: </label>
          <br>
          <input type="text" id="sourcedata" name="sourcedata" value="<%= event.sourcedata %>">
        </div>

        <div class="field-item form-control-lg">  
          <label for="comments">Comments:</label>
          <br>
          <input type="text" id="comments" name="comments" value="<%= event.comments %>">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  <div class="map-container">
    <div id='map' style="height: 500px; width: 500px; position: relative;">
    </div>
  </div>
</div>


<script src="/static/js/map.js">
</script>
