<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="text-center container " style="width: 500px;">
<h2>Sign Up</h2>
<main class="form-signin">
    <form action="/auth/signup" method="POST">
        <div class="form-floating">
            <label for="new-name">Name</label>
            <input id="new-name" class="form-control" type="text" name="name">
        </div>
        <div class="form-floating">
            <label for="new-email">Email</label>
            <input id="new-email" class="form-control" type="email" name="email">
        </div>

        <div class="form-floating">
            <label for="new-password">Password</label>
            <input id="new-password" class="form-control" type="password" name="password">
        </div>


        <input type="submit" class="w-100 btn btn-lg btn-primary" value="Sign up">
    </form>
</main>
</div>